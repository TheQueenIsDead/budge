            <!-- Charts Row -->
            <div class="row g-3 mb-3">
                <!-- Monthly Spending Bar Chart -->
                <div class="col-lg-6">
                    <div class="border rounded-3 p-3 h-100 d-flex flex-column">
                        <h4 class="fw-bold">Monthly Spending</h4>
                        <p class="text-muted">Your spending trends over the past 6 months</p>
                        <canvas id="barChart" style="max-height: 250px"></canvas>
                    </div>
                </div>

                <!-- Spending by Category Doughnut Chart -->
                <div class="col-lg-6">
                    <div class="border rounded-3 p-3 h-100 d-flex flex-column">
                        <h4 class="fw-bold">Spending by Category</h4>
                        <p class="text-muted">Your spending breakdown by category</p>
                        <canvas id="doughnutChart" style="max-height: 250px"></canvas>
                    </div>
                </div>
            </div>

        <!-- Chart.js Scripts -->
        <script>
            // Bar Chart
            new Chart(document.getElementById("barChart"), {
                type: "bar",
                data: {
                    labels: ["Jan", "Feb", "Mar", "Apr", "May", "Jun"],
                    datasets: [{
                        label: "Spending",
                        data: [1150, 1900, 1450, 1650, 1350, 2100],
                        backgroundColor: "#000"
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    },
                    plugins: {
                        legend: { display: false }
                    }
                }
            });

            // Doughnut Chart
            new Chart(document.getElementById("doughnutChart"), {
                type: "doughnut",
                data: {
                    labels: ["Groceries 31%", "Dining 23%", "Shopping 19%", "Transport 15%", "Entertainment 12%"],
                    datasets: [{
                        data: [31, 23, 19, 15, 12],
                        backgroundColor: ["#000", "#444", "#888", "#bbb", "#ddd"]
                    }]
                },
                options: {
                    plugins: {
                        legend: {
                            position: "right"
                        }
                    }
                }
            });
        </script>

