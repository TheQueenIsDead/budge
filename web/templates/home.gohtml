</div>

<!-- Metric Cards -->
<div class="row g-3 mb-3">
    <!-- Total Balance -->
    <div class="col-12 col-md-6 col-lg-3">
        <div class="border rounded-3 p-3 h-100">
            <div class="d-flex justify-content-between text-muted mb-2">
                <span class="fw-semibold">Total Balance</span>
                <span>$</span>
            </div>
{{/*            TODO: Format nicely with commas*/}}
            <h3 class="fw-bold mb-1">${{.totalBalance | printfCommas }}</h3>
            <div class="text-success">
                <i class="bi bi-arrow-up-short"></i> 3.5% from last month
            </div>
        </div>
    </div>

    <!-- Monthly Spending -->
    <div class="col-12 col-md-6 col-lg-3">
        <div class="border rounded-3 p-3 h-100">
            <div class="d-flex justify-content-between text-muted mb-2">
                <span class="fw-semibold">Monthly Spending</span>
                <span>$</span>
            </div>
            <h3 class="fw-bold mb-1">$2,156.42</h3>
            <div class="text-danger">
                <i class="bi bi-arrow-down-short"></i> 2.1% from last month
            </div>
        </div>
    </div>

    <!-- Income -->
    <div class="col-12 col-md-6 col-lg-3">
        <div class="border rounded-3 p-3 h-100">
            <div class="d-flex justify-content-between text-muted mb-2">
                <span class="fw-semibold">Income</span>
                <span>$</span>
            </div>
            <h3 class="fw-bold mb-1">$4,890.00</h3>
            <div class="text-success">
                <i class="bi bi-arrow-up-short"></i> 1.2% from last month
            </div>
        </div>
    </div>

    <!-- Savings -->
    <div class="col-12 col-md-6 col-lg-3">
        <div class="border rounded-3 p-3 h-100">
            <div class="d-flex justify-content-between text-muted mb-2">
                <span class="fw-semibold">Savings</span>
                <span>$</span>
            </div>
            <h3 class="fw-bold mb-1">$2,733.58</h3>
            <div class="text-success">
                <i class="bi bi-arrow-up-short"></i> 8.3% from last month
            </div>
        </div>
    </div>
</div>

