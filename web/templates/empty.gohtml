<!-- Desert SVG -->
<div class="mb-4">
    <svg viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg" fill="none" stroke="#999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" width="200" height="150">
        <!-- Ground line -->
        <line x1="0" y1="240" x2="400" y2="240" />

        <!-- Sun with rays -->
        <circle cx="330" cy="60" r="16" />
        <g stroke-width="1.5">
            <line x1="330" y1="30" x2="330" y2="20" />
            <line x1="330" y1="90" x2="330" y2="100" />
            <line x1="300" y1="60" x2="290" y2="60" />
            <line x1="360" y1="60" x2="370" y2="60" />
            <line x1="312" y1="42" x2="305" y2="35" />
            <line x1="348" y1="42" x2="355" y2="35" />
            <line x1="312" y1="78" x2="305" y2="85" />
            <line x1="348" y1="78" x2="355" y2="85" />
        </g>

        <!-- Cactus -->
        <g transform="translate(90,240)">
            <path d="M0 0 L0 -60 Q0 -70 10 -70 Q20 -70 20 -60 L20 0" />
            <path d="M0 -40 Q-10 -40 -10 -50 Q-10 -60 0 -60" />
            <path d="M20 -45 Q30 -45 30 -55 Q30 -65 20 -65" />
        </g>

        <!-- Tumbleweed -->
        <g transform="translate(200,235)">
            <circle r="18" />
            <path d="M -8 -8 Q 0 -14 8 -8 Q 14 0 8 8 Q 0 14 -8 8 Q -14 0 -8 -8 Z" />
        </g>

        <!-- Wind lines -->
        <path d="M 220 245 Q 230 235 240 245" />
        <path d="M 245 250 Q 255 242 265 247" />
    </svg>
</div>


