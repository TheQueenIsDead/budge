{{ define "inventory" }}
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-start mb-4">
        <h2 class="fw-bold">Inventory</h2>
    </div>

    <!-- Metric Cards -->
    <div class="row g-3 mb-3">
        <!-- Total Assets -->
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card border rounded-3 p-3 h-100 shadow-sm">
                <div class="d-flex justify-content-between text-muted mb-2">
                    <span class="fw-semibold">Total Assets</span>
                    <div>
                        <span>$</span>
                        <i class="bi bi-arrow-up-short"></i>
                    </div>
                </div>
                {{/*            TODO: Format nicely with commas*/}}
                <h3 class="fw-bold mb-1">{{.totalAssets | fmtCurrency }}</h3>
                <div class="text-success">
{{/*                    <i class="bi bi-arrow-up-short"></i> 3.5% from last month*/}}
                </div>
            </div>
        </div>

        <!-- Total Liabilities -->
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card border rounded-3 p-3 h-100 shadow-sm">
                <div class="d-flex justify-content-between text-muted mb-2">
                    <span class="fw-semibold">Total Liabilities</span>
                    <div>
                        <span>$</span>
                        <i class="bi bi-arrow-down-short"></i>
                    </div>
                </div>
                <h3 class="fw-bold mb-1">{{ .totalLiabilities | fmtCurrency }}</h3>
                <div class="text-danger">
{{/*                    <i class="bi bi-arrow-down-short"></i>{{ .monthlySpendDelta | fmtPercent }} from last month*/}}
                </div>
            </div>
        </div>

        <!-- Net Worth -->
        <div class="col-12 col-md-6 col-lg-3 ">
            <div class="card border rounded-3 p-3 h-100 shadow-sm">
                <div class="d-flex justify-content-between text-muted mb-2">
                    <span class="fw-semibold">Net Worth</span>
                    <div>
                        <span>$</span>
                        <i class="bi bi-arrow-up-short"></i>
                    </div>
                </div>
                <h3 class="fw-bold mb-1">{{ .netWorth | fmtCurrency }}</h3>
                <div class="text-success">
{{/*                    <i class="bi bi-arrow-up-short"></i>{{ .incomeDelta | fmtPercent }} from last month*/}}
                </div>
            </div>
        </div>

        <!-- Debt to Asset Ratio -->
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card border rounded-3 p-3 h-100 shadow-sm">
                <div class="d-flex justify-content-between text-muted mb-2">
                    <span class="fw-semibold">Debt-to-Asset Ratio</span>
                    <div>
                        <span>$</span>
                        <i class="bi bi-arrow-up-short"></i>
                    </div>
                </div>
                <h3 class="fw-bold mb-1">{{ .debtToAssetRatio | fmtPercent }}</h3>
                <div class="text-success">
{{/*                    <i class="bi bi-arrow-up-short"></i> 8.3% from last month*/}}
                </div>
            </div>
        </div>
    </div>

    <!-- Tabs -->
    <ul class="nav nav-pills mb-4">
        <li class="nav-item">
            <a class="nav-link active" href="#">All Assets</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Real Estate</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Investments</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Vehicles</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Other</a>
        </li>
    </ul>

    <!-- Assets -->

    <!-- Transactions -->
    <div class="table-container">
        <table class="table">
            <thead>
            <tr>
                <th>Merchant</th>
                <th>Category</th>
                <th>Date</th>
                <th>Amount</th>
            </tr>
            </thead>
            <tbody>
            {{ range .transactions }}
                <tr>

                    <td>
                        <div class="d-flex align-items-center">
                            <div class="bg-light rounded-circle p-2 me-3">
                                <i class="bi bi-credit-card fs-5 text-dark"></i>
                            </div>
                            {{if .Merchant.Name}}
                                {{.Merchant.Name}}
                            {{ else}}
                                {{.Description}}
                            {{end}}
                        </div>
                    </td>
                    <td><span class="badge-category">{{.Category.Groups.PersonalFinance.Name}}</span></td>
                    <td>{{.Date.Format "02/01/2006"}}</td>
                    {{ if gt .Amount 0.0 }}
                        <td class="text-success">{{ .Amount | fmtCurrency }}</td>
                    {{else}}
                        <td class="text-danger">{{ .Amount | fmtCurrency }}</td>
                    {{end}}
                </tr>
            {{ end }}
            </tbody>
        </table>
    </div>

